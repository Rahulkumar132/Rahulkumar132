/* Basic Style */

Body {
    Color: #333;
    Font-Family: Lato, Sans-Serif;
    Background-Color:#E4e4e4;
}

.Container {
    Display: Block;
    Width: 400px;
    Margin: 10px Auto 100px;
    Background-Color:#Fff;
    Padding:0px 10px 10px 10px;
    Border-Radius:10px
}

H2 {
    Text-Align:center;
    Padding-Top:10px;
    Margin-Bottom:0px;
}

Ul {
    Margin: 0;
    Padding: 0;
}

Li * {
    Float: Left;
}

Li,
H3 {
    Clear: Both;
    List-Style: None;
}

Input,
Button {
    Outline: None;
}

Button {
    Background: None;
    Border: 0px;
    Color: #888;
    Font-Size: 15px;
    Width: 60px;
    Margin: 10px 0 0;
    Font-Family: Lato, Sans-Serif;
    Cursor: Pointer;
}

Button:hover {
    Color: #333;
}
